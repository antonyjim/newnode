<% include partials/header %>

<input type="hidden" id="pid" value="<%=auth.user%>">
<div id="error-box">

</div>

<div id="success-message">

</div>

<div class="modify-user-info-card card">
    <div class="modify-user-info-card-title card-title">
        manage account
    </div>
    <div class="modify-user-info-card-body card-body">
        <ul>
            <li class="modify-user-li">
                <span class="modify-user-link" onclick="mod('otherinfo');">
                    Other Info
                </span>
            </li>
            <li class="modify-user-li">
                <span class="modify-user-link" onclick="mod('passwdmod')">
                    Change Password
                </span>
            </li>
            <li class="modify-user-li">
                <span class="modify-user-link" onclick="mod('emailmod')">
                    Change Email
                </span>
            </li class="modify-user-li">
            <li>
                <span class="modify-user-link" onclick="advertmod()">
                    Manage My Adverts
                </span>
            </li class="modify-user-li">
            <li>
                <span class="modify-user-link" onclick="mod('delmod')">
                    Delete My Account
                </span>
            </li>
        </ul>
    </div>
</div>
<div class="active-posts">
    posts
</div>
<div class="account-art-cont">
    <% for (let m of post) { %>
        <div class="account-post post-postslist card">
            <div class="post-thmb-cont">
                    <img class="post-thumb" alt="thumbnail" src="/public/images/<%=m.postPid%>/thmb.jpg">
            </div>
            
            <a class="post-postslist-title" href="/posts/?pid=<%=m.postPid%>">
                <%=m.title%>
            </a>
            <div class="post-postlist-desc-cont">
                    <div class="price">
                        <%=m.price%>
                    </div>
                    <a href="/posts/edit/?pid=<%=m.postPid%>" class="post-postlist-edit">Edit</a>
            </div>
        </div>
    <% } %>
</div>
<% if (inactPosts != '') { %>
    <% console.log(inactPosts) %>
    <div class="inactive-posts">
        inactive posts
    </div>
    <div class="account-art-cont">
        <% for (let m of inactPosts) { %>
            <div class="account-post post-postslist card">
                <div class="post-thmb-cont">
                        <img class="post-thumb" alt="thumbnail" src="/public/images/<%=m.postPid%>/thmb.jpg">
                </div>
                
                <a class="post-postslist-title" href="/posts/?pid=<%=m.postPid%>">
                    <%=m.title%>
                </a>
                <div class="post-postlist-desc-cont">
                        <div class="price">
                            <%=m.price%>
                        </div>
                        <a href="/posts/edit/?pid=<%=m.postPid%>" class="post-postlist-edit">Edit</a>
                </div>
            </div>
        <% } %>
    </div>
<% } %>

<% if (auth.userlevel == 2 && news) { %>
    <div class="active-posts">
        news
    </div>
    <div class="account-art-cont">
        <% for (let m of news) { %>
            <div class="account-post post-postslist card">
                <div class="post-thmb-cont">
                        <img class="post-thumb" alt="thumbnail" src="/public/news/images/<%=m.pid%>/thmb.jpg">
                </div>
                
                <a class="post-postslist-title" href="/news/?pid=<%=m.pid%>">
                    <%=m.title%>
                </a>
                <div class="post-postlist-desc-cont">
                        <a href="/news/edit/?pid=<%=m.pid%>" class="post-postlist-edit">Edit</a>
                </div>
            </div>
        <% } %>
    </div>
<% } %>        

<script src="/public/scripts/account.js"></script>

<% include partials/footer %>