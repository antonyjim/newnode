<% include partials/header %>
<div class="main-content">
    <div class="card post-sort-card">
        <div class="card-title post-sort-card-title">
            filter
        </div>
        <form onsubmit="filter();">
            <div class="category-sort-cont">
                <% var n = [] %>
                <% for(let j in post) { %>
                    <% if (n.indexOf(post[j].post) == '-1') { n.push(post[j].post);%>
                    <label class="category-sort-label check-form-label" for="<%=post[j].post%>">
                        <%=post[j].post%>
                    </label>
                    <input type="checkbox"class="category-sort" id="<%=post[j].post%>" value="<%=post[j].post%>">
                <% }} %>
            </div>
        
        </form>
    </div>
    <div class="post-cont">
        <% for (let m of post) { %>
            <div class="post-postslist card">
                <div class="post-thmb-cont">
                        <img class="post-thumb" alt="thumbnail" src="/public/images/<%=m.post_pid%>/thmb.jpg">
                </div>
                
                <a class="post-postslist-title" href="/posts/?pid=<%=m.post_pid%>">
                    <%=m.title%>
                </a>
                <div class="post-postlist-desc-cont">
                        <div class="post-postslits-short">
                                <%=m.shortdesk%>
                        </div>
                        <div class="post-postslist-price">
                            <%=m.price%>
                        </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% include partials/footer %>